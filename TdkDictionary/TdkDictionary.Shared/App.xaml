<Application
    x:Class="TdkDictionary.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:TdkDictionary.Common"
    xmlns:local="using:TdkDictionary">

    <Application.Resources>
        <ResourceDictionary>
            <!-- General -->
            <common:ViewModelLocator x:Key="viewModelLocator" />

            <ResourceDictionary.ThemeDictionaries>
                <!-- Default Theme -->
                <ResourceDictionary x:Key="Default" Source="/ResourceDictionaries/Themes/Default.xaml" />
            </ResourceDictionary.ThemeDictionaries>

            <ResourceDictionary.MergedDictionaries>
                <!-- Converters -->
                <ResourceDictionary Source="/ResourceDictionaries/Converters.xaml" />

                <!-- Data Templates-->
                <ResourceDictionary Source="/ResourceDictionaries/DataTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
